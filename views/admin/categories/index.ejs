<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <h2>Categorias</h2>
            <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>Titulo</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                <tbody>

                    <% categories.forEach(category=>{ %>
                        <tr>
                            <th>
                                <%=category.title%>
                            </th>
                            <th>
                                <%=category.slug%>
                            </th>
                            <th>

                            
                                <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDeletion(event, this)">
                                
                                    <input type="hidden" name="id" value="<%= category.id %>">
                            
                                    <button class="btn btn-danger">Deletar</button>
                                    <a class="btn btn-warning" href="/admin/categories/edit/<%=category.id %>">Editar</button>

                
                                </form>

                            </th>
                        </tr>
                        <% }) %>
                </tbody>
                </thead>
            </table>
        </div>

        <%- include('../../partials/footer.ejs') %>
            <script>
                function confirmDeletion(event, form) {
                    //impedir que o formulario seja submetido
                    event.preventDefault()
                    //popup
                    var wantToDelete = confirm("Você quer deletar essa categoria?")
                    if (wantToDelete) {
                        form.submit()
                    } 
                }

            </script>